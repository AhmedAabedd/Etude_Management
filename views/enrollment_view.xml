<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--TREE-->
    <record id="view_enrollment_tree" model="ir.ui.view">
        <field name="name">etude.enrollment.tree</field>
        <field name="model">etude.enrollment</field>
        <field name="arch" type="xml">
            <list decoration-success="state == 'active'"
                  decoration-danger="state == 'expired'">
                <field name="name"/>
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="group_id"/>
                <field name="state" widget="badge"
                                    decoration-muted="state == 'draft'"
                                    decoration-success="state == 'active'"
                                    decoration-danger="state == 'expired'"/>
            </list>
        </field>
    </record>

    <!--FORM-->
    <record id="view_enrollment_form" model="ir.ui.view">
        <field name="name">etude.enrollment.form</field>
        <field name="model">etude.enrollment</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button string="Set To Draft" type="object" name="action_draft" invisible="state == 'draft'"/>
                    <button string="Activate" type="object" name="action_active" class="btn-primary" invisible="state != 'draft'"/>
                    <button string="Set To Expired" type="object" name="action_expired" invisible="state != 'active'"/>
                    <button string="pay" type="object" name="open_create_payment" class="btn-success" invisible="payment_status == 'paid'"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft, active, expired"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button class="oe_stat_button" type="object" name="action_view_attendance" icon="fa-check">
                            <field name="sessions_attended" string="Attendances" widget="statinfo"/>
                        </button>
                        <button class="oe_stat_button" type="object" name="action_view_payment" icon="fa-file-text-o">
                            <field name="payment_count" string="Payments" widget="statinfo"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <notebook>
                        <page name="general_info" string="General Information">
                            <group>
                                <group string="General Info">
                                    <field name="student_id"/>
                                    <field name="subject_id"/>
                                    <field name="group_id"/>
                                    <field name="start_date"/>
                                </group>
                                <group string="Sessions">
                                    <field name="sessions_number"/>
                                    <field name="sessions_remaining"/>
                                </group>
                            </group>
                        </page>
                        <page name="payment_info" string="Payment Infos">
                            <group>
                                <field name="total_amount" readonly="payment_status != 'unpaid'"/>
                                <field name="payment_status" widget="badge"
                                                             decoration-success="payment_status == 'paid'"
                                                             decoration-danger="payment_status == 'unpaid'"
                                                             decoration-warning="payment_status == 'partial'"/>
                                <field name="unpaid_amount" invisible="payment_status == 'paid'"/>
                            </group>
                        </page>
                        <page name="notes" string="Notes">
                            <field name="note" placeholder="You can add notes to this enrollmet here ..."/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!--ACTION-->
    <record id="action_etude_enrollment" model="ir.actions.act_window">
        <field name="name">Enrollments</field>
        <field name="res_model">etude.enrollment</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new enrollment !  
            </p>
        </field>
    </record>

    <!--ACTION FOR ACTIVE-->
    <record id="action_etude_enrollment_active" model="ir.actions.act_window">
        <field name="name">Active Enrollments</field>
        <field name="res_model">etude.enrollment</field>
        <field name="domain">[('state', '=', 'active')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new enrollment !  
            </p>
        </field>
    </record>

    <!--ACTION FOR EXPIRED-->
    <record id="action_etude_enrollment_expired" model="ir.actions.act_window">
        <field name="name">Expired Enrollments</field>
        <field name="res_model">etude.enrollment</field>
        <field name="domain">[('state', '=', 'expired')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create a new enrollment !  
            </p>
        </field>
    </record>

    <!-- data/enrollment_actions.xml -->
    <record id="action_enrollment_form_only" model="ir.actions.act_window">
        <field name="name">Active Enrollment</field>
        <field name="res_model">etude.enrollment</field>
        <field name="view_id" ref="view_enrollment_form"/>
        <field name="target">new</field>
        <field name="context">{'create': False}</field>
    </record>

</odoo>
