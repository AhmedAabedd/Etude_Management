<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--TREE VIEW-->
    <record id="view_payment_tree" model="ir.ui.view">
        <field name="name">etude.payment.tree</field>
        <field name="model">etude.payment</field>
        <field name="arch" type="xml">
            <list create="0">
                <field name="name"/>
                <field name="enrollment_id"/>
                <field name="student_id"/>
                <field name="paid_amount"/>
                <field name="payment_date"/>
            </list>
        </field>
    </record>

    <!--FORM VIEW-->
    <record id="view_payment_form" model="ir.ui.view">
        <field name="name">etude.payment.form</field>
        <field name="model">etude.payment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <div class="oe_title">
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                    </group>
                    <group>
                        <group>
                            <field name="student_id"/>
                            <field name="enrollment_id"/>
                        </group>
                        <group>
                            <field name="total_amount"/>
                            <field name="paid_amount"/>
                            <field name="payment_date"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!--ACTION-->
    <record id="action_etude_payment" model="ir.actions.act_window">
        <field name="name">Payments</field>
        <field name="res_model">etude.payment</field>
    </record>

</odoo>
