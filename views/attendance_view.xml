<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!--TREE VIEW-->
    <record id="view_attendance_tree" model="ir.ui.view">
        <field name="name">etude.attendance.tree</field>
        <field name="model">etude.attendance</field>
        <field name="arch" type="xml">
            <list>
                <field name="student_id"/>
                <field name="subject_id"/>
                <field name="session_id"/>
                <field name="sessions_remaining"/>
                <field name="status"/>
            </list>
        </field>
    </record>

    <!--SEARCH VIEW-->
    <record id="view_attendance_search" model="ir.ui.view">
        <field name="name">etude.attendance.search</field>
        <field name="model">etude.attendance</field>
        <field name="arch" type="xml">
            <search>
                <!-- Filters go here -->
                <filter name="filter_present" string="Present" domain="[('status','=',True)]"/>
            </search>
        </field>
    </record>

    <!--FORM VIEW-->
    <record id="view_attendance_form" model="ir.ui.view">
        <field name="name">etude.attendance.form</field>
        <field name="model">etude.attendance</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="session_id"/>
                            <field name="student_id"/>
                            <field name="enrollment_id"/>
                        </group>
                        <group>
                            <field name="sessions_remaining"/>
                            <field name="status"/>
                        </group>
                    </group>  
                </sheet>
            </form>
        </field>
    </record>

    <!--ACTION-->
    <record id="action_etude_attendance" model="ir.actions.act_window">
        <field name="name">Attendances</field>
        <field name="res_model">etude.attendance</field>
        <!-- Specify search view -->
        <field name="search_view_id" ref="view_attendance_search"/>
    </record>

</odoo>
